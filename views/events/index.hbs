<div class="container">
  <h1>Current Events </h1>
  <a href="/events/new">Add a New Event </a>
  <hr>
  {{#each events}}
  <div class="row">
    <div class="col-md-2">
      <img src=" {{ this.poster_url }}"
        alt = "{{ this.poster_url }}"
        class="poster">
    </div>
    <div class="col-md-6">
      <h2>
        <a href="/contacts/{{ this.id }}">{{ this.title}} </a>
      </h2>
        <p>Description: {{ this.description }} </p>
        <p>Over 21 Event: {{ this.over_21 }} </p>
        <p>Venue : {{this.name}} </p>
        <p>Line 1 : {{ this.line_1 }} </p>
        <p>LIne 2 : {{ this.line_2 }} </p>
        <p>City   : {{ this.city   }} </p>
        <p>Zip    : {{ this.zip    }} </p>
        <p>Zip    : {{ this.zip    }} </p>
        <p>Ticket Price  : {{ this.price   }} </p>
        <p>Capacity  : {{ this.capcity }} </p>
        <p>
          <form action="/events/{{ this.id }}?_method=DELETE" method="POST">
            <input
              class="btn btn-sm btn-danger"
              type="submit"
              name="delete"
              value="Delete Movie">
            </form>
            <br>
          <form action="/events/{{ this.id }}/edit" method="GET">
            <input
              class="btn btn-sm btn-danger"
              type="submit"
              name="edit"
              value="Edit Movie">
          </form>
          </p>
        </div>
      </div>
      {{/each}}
    </div>
